### CUSTOM OPTIONS ###

# Reset skins
  SKINS=""

# remove default skin included in Kodi (yes/no)
  SKIN_REMOVE_SHIPPED="no"

# git source index
  GIT_DEP=28850

# Custom packages
  CUSTOM_SUPPORT="yes"

# Custom patch LibreELEC-settings
  CUSTOM_LIBREELEC_SETTING="yes"

# Custom source
  DISTRO_CUSTOM_SRC=""

# Locales
  LOCALES_SUPPORT="yes"

# Libxcb extention
  LIBXCB_EXT="yes"

# Enable shared build
  ENABLE_SHARED="yes"

# KODI addons
  KODI_REPOSITORY_YELLOWDRAGON="yes"

# Services
  LCDPROC_SERVICE="yes"
  TRANSMISSION_SERVICE="no"
  OSCAM_SERVICE="yes"

# TV Services
  TVHEADEND_SERVICE="yes"
  VDR_SERVICE="no"

# Tools
  SYS_TOOLS_ENABLED="yes"
  DVB_TOOLS_ENABLED="yes"

# Perl
  PERL_SUPPORT="yes"

# Docker Fix
  DOCKER_FIX="yes"

show_distro_config() {
  if [ "$CUSTOM_SUPPORT" = "yes" ]; then
    config_message="$config_message\n - Remove shipped skins:\t\t $SKIN_REMOVE_SHIPPED"

    config_message="$config_message\n"
    config_message="$config_message\n $dashes$dashes"
    config_message="$config_message\n Custom options for $DISTRONAME"
    config_message="$config_message\n $dashes$dashes"
    config_message="$config_message\n"

    config_message="$config_message\n - Locales support:\t\t\t $LOCALES_SUPPORT"
    config_message="$config_message\n - Patch LibreELEC-settings:\t\t $CUSTOM_LIBREELEC_SETTING"
    config_message="$config_message\n - libXCB extention:\t\t\t $LIBXCB_EXT"
    config_message="$config_message\n - Enable shared build:\t\t\t $ENABLE_SHARED"

    config_message="$config_message\n - KODI YELLOWDRAGON repositories:\t $KODI_REPOSITORY_YELLOWDRAGON"
    config_message="$config_message\n - Lcdproc service:\t\t\t $LCDPROC_SERVICE"
    config_message="$config_message\n - Transmission service:\t\t $TRANSMISSION_SERVICE"
    config_message="$config_message\n - Oscam service:\t\t\t $OSCAM_SERVICE"
    config_message="$config_message\n - Tvheadend  service:\t\t\t $TVHEADEND_SERVICE"
    config_message="$config_message\n - VDR service:\t\t\t\t $VDR_SERVICE"
    config_message="$config_message\n - System tools:\t\t\t $SYS_TOOLS_ENABLED"
    config_message="$config_message\n - DVB tools:\t\t\t\t $DVB_TOOLS_ENABLED"
    config_message="$config_message\n - Perl:\t\t\t\t $PERL_SUPPORT"
    config_message="$config_message\n - Docker Fix:\t\t\t\t $DOCKER_FIX"
  fi
}
