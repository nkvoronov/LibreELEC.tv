### CUSTOM OPTIONS ###

# Reset skins
  SKINS=""

# remove default skin included in Kodi (yes/no)
  SKIN_REMOVE_SHIPPED="no"

# git source index
  GIT_DEP=28850

# Custom packages
  CUSTOM_SUPPORT="yes"

# Custom source
  DISTRO_CUSTOM_SRC=""

# Locales
  LOCALES_SUPPORT="yes"

# Libxcb extention
  LIBXCB_EXT="yes"

# Enable shared build
  ENABLE_SHARED="yes"

# additional drivers (DVB) to install (crazycat / tbsdtv / no):
  MEDIA_BUILD_TYPE="tbsdtv"

if [ "$MEDIA_BUILD_TYPE" != "no" ]; then
  if [ "$MEDIA_BUILD_TYPE" = "crazycat" ]; then
    ADDITIONAL_DRIVERS="$ADDITIONAL_DRIVERS crazycat-media-build"
  else
    ADDITIONAL_DRIVERS="$ADDITIONAL_DRIVERS tbsdtv-media-build"
  fi
fi

