
ADDON_DIR=/storage/.kodi/addons/tools.vlc3

chmod a+x $ADDON_DIR/bin/*
chmod a+x $ADDON_DIR/data/*.bin

PLIBS="$ADDON_DIR/lib:$ADDON_DIR/lib/vlc:$ADDON_DIR/lib/vlc/plugins"

QT5DIR=$ADDON_DIR/lib
QTDIR=$QT5DIR

export QT5DIR QTDIR
export QT_PLUGIN_PATH=$QT5DIR/plugins
export QT_QPA_PLATFORM_PLUGIN_PATH=$QT5DIR/plugins/platforms

export QT_AUTO_SCREEN_SCALE_FACTOR=0
export QT_SCALE_FACTOR=1
export QT_DEBUG_PLUGINS=0
