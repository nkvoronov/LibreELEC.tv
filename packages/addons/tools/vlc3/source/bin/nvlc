. /etc/profile
. /storage/.kodi/addons/tools.vlc3/data/config

export TERMINFO=$ADDON_DIR/share/terminfo
export TERM=linux

eval `dbus-launch --sh-syntax`
LD_LIBRARY_PATH=$PLIBS exec $ADDON_DIR/data/vlc.bin --no-plugins-cache -I "ncurses" "$@"
