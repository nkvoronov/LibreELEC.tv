PKG_NAME="vdr-plugin-tvguide"
PKG_VERSION="8287bb5"
PKG_ARCH="any"
PKG_LICENSE="GPL"
PKG_SITE="http://projects.vdr-developer.org/projects/plg-tvguide"
PKG_URL="https://github.com/vdr-projects/vdr-plugin-tvguide.git"
PKG_TYPE="git"
PKG_DEPENDS_TARGET="toolchain vdr ImageMagick"
PKG_SECTION="multimedia"
PKG_SHORTDESC="TVGuide"
PKG_LONGDESC="TVGuide"

PKG_IS_ADDON="no"
PKG_AUTORECONF="no"

IMAGELIB=imagemagick

pre_configure_target() {
  export CFLAGS="$CFLAGS -fPIC"
  export CXXFLAGS="$CXXFLAGS -fPIC"
  export LDFLAGS="$LDFLAGS -fPIC"
}

make_target() {
  VDR_DIR=$(get_build_dir vdr)
  export PKG_CONFIG_PATH=$VDR_DIR:$PKG_CONFIG_PATH
  export CPLUS_INCLUDE_PATH=$VDR_DIR/include

  make VDRDIR=$VDR_DIR \
    LIBDIR="." \
    LOCDIR="./locale" \
    IMAGELIB=$IMAGELIB \
    all install-i18n
}

post_make_target() {
  VDR_DIR=$(get_build_dir vdr)
  VDR_APIVERSION=`sed -ne '/define APIVERSION/s/^.*"\(.*\)".*$/\1/p' $VDR_DIR/config.h`
  LIB_NAME=lib${PKG_NAME/-plugin/}

  cp --remove-destination $PKG_BUILD/${LIB_NAME}.so $PKG_BUILD/${LIB_NAME}.so.${VDR_APIVERSION}
  $STRIP libvdr-*.so*
}

makeinstall_target() {
  : # installation not needed, done by create-addon script
}