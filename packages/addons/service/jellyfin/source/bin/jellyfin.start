. /etc/profile
oe_setup_addon service.jellyfin

chmod +x $ADDON_DIR/bin/*
mkdir -p $ADDON_HOME

export DOTNET_SYSTEM_GLOBALIZATION_INVARIANT=1

nice -n "$jellyfin_nice" \
dotnet $ADDON_DIR/jellyfin/jellyfin.dll --datadir $ADDON_HOME --cachedir $ADDON_HOME/cache --configdir $ADDON_HOME/config --logdir $ADDON_HOME/log
