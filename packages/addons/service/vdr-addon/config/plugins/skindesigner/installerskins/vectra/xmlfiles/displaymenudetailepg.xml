        <drawtextbox condition="{ismovie}||{epgpic1available}" x="0" y="10" width="96%" float="topright" floatwidth="{width(moviepostertop)} + 10" floatheight="{height(moviepostertop)} + 20" font="{regular}" fontsize="6%" color="{clrWhite}" text="{description}" />
        <drawtextbox condition="{epgpic1available}" x="0" y="10" width="96%" float="topright" floatwidth="{width(epgpostertop)} + 10" floatheight="{height(epgpostertop)} + 20" font="{regular}" fontsize="6%" color="{clrWhite}" text="{description}" />
