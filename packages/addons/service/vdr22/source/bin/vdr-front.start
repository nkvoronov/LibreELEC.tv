. /etc/profile

oe_setup_addon service.vdr-addon

VDR_FRONT_RUN_FILE="$ADDON_HOME/vdr-front.run"
VDR_RUN_FILE="$ADDON_HOME/vdr.enable"

if [ "$VDR_TYPE" != "service" ]; then

    if [ -f $VDR_RUN_FILE ]; then
        systemctl stop service.vdr-addon.service
    fi

    touch $VDR_FRONT_RUN_FILE

    systemctl start service.multimedia.vdr-addon.service

    systemctl stop kodi.service

    sleep 4

    systemctl restart service.vdr-addon.service

fi