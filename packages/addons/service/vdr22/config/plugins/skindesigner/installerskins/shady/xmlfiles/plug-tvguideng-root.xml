            <drawtext x="0" y="50%" font="{light}" width="100%" fontsize="45%" color="{clrWhite}" text="{title}  {shorttext}" />
		</area>
		<area condition="not{isdummy}++{hasposter}" x="3%" y="1%" width="54%" height="9%" layer="3">
