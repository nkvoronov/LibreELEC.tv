        </area>
        <area condition="{timelineheader}" layer="6">
            <drawtext name="text0" x="{areawidth}*0.05 + {areawidth}*0.0375/2 - {width(text0)}/2" y="80%" font="{light}" fontsize="20%" color="{clrWhite}" text="0"/>
