. /etc/profile

if [ -f /storage/.cache/services/vdr-front.run ]; then

    systemctl stop vdr-front.service

    mv /storage/.cache/services/vdr-front.run /storage/.cache/services/vdr-front.conf

    case "$1" in
        -p) # poweroff
            poweroff -f
        ;;
        -r) # reboot
            reboot
        ;;
        -s) # sleep
            pm-suspend suspend
        ;;
        -e) # exit to XBMC

            if [ -f /storage/.cache/services/vdr.conf ]; then
                systemctl start vdr.service
            fi

            if [ -f /storage/.cache/services/tvheadend.conf ]; then
                systemctl start tvheadend.service
            fi

            sleep 4

            systemctl restart lcdd.service

            systemctl restart kodi.service
        ;;
    esac
fi