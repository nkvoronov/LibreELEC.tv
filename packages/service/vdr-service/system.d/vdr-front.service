[Unit]
Description=vdr-front
ConditionPathExists=|/storage/.cache/services/vdr-front.conf
After=network.target

[Service]
EnvironmentFile=-/storage/.cache/services/vdr-front.conf
ExecStart=/bin/sh -c 'exec /usr/bin/vdr.start front'
KillMode=process
TimeoutStopSec=10
Restart=always
RestartSec=2
StartLimitInterval=0
LimitNOFILE=16384

[Install]
WantedBy=multi-user.target