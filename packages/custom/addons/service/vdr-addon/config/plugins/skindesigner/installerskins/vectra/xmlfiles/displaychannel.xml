            <drawimage condition="gt({windbearing}, 337) ++ le({windbearing}, 252)" name="windbearingicon" imagetype="icon" path="windbearing_24" x="{areawidth}/6 - {width(windbearingicon)}/2" y="{areaheight}*0.08" width="{areaheight}*0.4" height="{areaheight}*0.4"/>
            <drawtext name="windspeed" x="{areawidth}/6 - {width(windspeed)}/2" y="{areaheight}*0.49" font="{regular}" fontsize="16%" color="{clrWhite}" text="{windspeed}km/h" />
            <drawtext name="windbearing" x="{areawidth}/6 - {width(windbearing)}/2" y="{areaheight}*0.60" font="{regular}" fontsize="16%" color="{clrWhite}" text="{tr(from)} {windbearingstring}" />
