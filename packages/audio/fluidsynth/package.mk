PKG_NAME="fluidsynth"
PKG_VERSION="2.3.2"
PKG_SHA256="cd610810f30566e28fb98c36501f00446a06fa6bae3dc562c8cd3868fe1c0fc7"
PKG_LICENSE="GPL"
PKG_SITE="http://fluidsynth.org/"
PKG_URL="https://github.com/FluidSynth/fluidsynth/archive/v${PKG_VERSION}.tar.gz"
PKG_DEPENDS_TARGET="toolchain glib libsndfile"
PKG_LONGDESC="FluidSynth renders midi music files as raw audio data, for playing or conversion."
PKG_BUILD_FLAGS="+pic"

if [ "${CUSTOM_SUPPORT}" = "yes" -a "${ENABLE_SHARED}" = "yes" ]; then
  SHARED="-DBUILD_SHARED_LIBS=1"
else
  SHARED="-DBUILD_SHARED_LIBS=0"
fi

PKG_CMAKE_OPTS_TARGET="${SHARED} \
                       -DLIB_SUFFIX= \
                       -Denable-libsndfile=1 \
                       -Denable-pkgconfig=1 \
                       -Denable-pulseaudio=0 \
                       -Denable-readline=0"
